<!DOCTYPE html>
<html>
	<head>
		<title><%= full_title(yield(:title)) %></title>
		<%= csrf_meta_tags %>
		
		<%= render "layouts/rails_default" %>
		<%= render "layouts/shim" %>
	</head>

	<body>
		<%= render "layouts/header" %>
		<div class="container">
			<%= render "layouts/flash" %>
			<%= yield %>
			<%= render "layouts/footer" %>
			<%= debug(params) if Rails.env.development? %>
			<div class="jump-to-top">
				<a href="#top">上に戻る</a>
			</div>
		</div>
	</body>
</html>
