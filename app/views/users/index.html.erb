<% provide(:title, "作家一覧") %>
<h1>作家一覧</h1>
<div class="row">
  <div class="col-md-8">
    <%= render "shared/search", cont: :name_cont %>
    <% if @count >= 1 %>
      ヒット数（<%= @count %>）
      <% @users.each do |user| %>
      <ol>
        <% if user.image? %>
          <%= link_to image_tag(user.image.url, size: 70, class: "images"), user_path(user) %>
        <% else %>
          <%= link_to image_tag("noimage.jpg", size: 70, class: "images"), user_path(user)%>
        <% end %>
        <div class="writers"><%= link_to user.name, user_path(user) %></div>
      </ol>
      <% end %>
    <% else %>
      検索結果：なし
    <% end %>
  </div>
</div>